@model RegisterVM

@{
    ViewData["Title"] = "Регистрация";
}

<div class="card mt-3" style="width: 70%; left: 15%">
    <div class="card-header">
        <div class="row py-2">
            <p class="h3">Введите Ваши Данные</p>
        </div>
    </div>
    <div class="card-body p-3">
        <form asp-controller="Authentication" asp-action="Register" method="post" class="row pt-3" enctype="multipart/form-data">
            <input asp-for="@Model.User.Id" hidden>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="User.Email" class="form-control" aria-required="true"/>
                <label asp-for="User.Email" class="ms-2 text-muted">Почта</label>
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="User.UserName" class="form-control" />
                <label asp-for="User.UserName" class="ms-2 text-muted">Никнейм</label>
                <span asp-validation-for="User.UserName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="User.FirstName" class="form-control" />
                <label asp-for="User.FirstName" class="ms-2 text-muted">Имя</label>
                <span asp-validation-for="User.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="User.LastName" class="form-control" />
                <label asp-for="User.LastName" class="ms-2 text-muted">Фамилия</label>
                <span asp-validation-for="User.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Password" class="form-control" />
                <label asp-for="Password" class="ms-2 text-muted">Пароль</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="ConfirmPassword" class="form-control" />
                <label asp-for="ConfirmPassword" class="ms-2 text-muted">Проверка Пароля</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="User.BirthDay" class="form-control" />
                <label asp-for="User.BirthDay" class="ms-2 text-muted">День Рождения</label>
                <span asp-validation-for="User.BirthDay" class="text-danger"></span>
            </div>
            <div class="col-12">
                <button type="submit" class="w-100 btn btn-lg btn-dark">Зарегестрироваться</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
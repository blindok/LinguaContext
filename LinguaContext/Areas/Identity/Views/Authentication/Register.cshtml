@model RegisterVM

@{
    ViewData["Title"] = "Регистрация";
}

<div class="card mt-5" style="width: 60%; left: 20%">
    <div class="card-header bg-primary">
        <div class="row py-2 text-center text-white">
            <p class="h3">Создайте аккаунт</p>
        </div>
    </div>
    <div class="card-body p-3">
        <form asp-controller="Authentication" asp-action="Register" method="post" class="row pt-3" enctype="multipart/form-data">
            <input asp-for="@Model.User.Id" hidden>
            <div class="form-floating mb-4 col-md-6">
                <input asp-for="User.Email" class="form-control" aria-required="true" placeholder="" />
                <label asp-for="User.Email" class="ms-2 text-muted">Почта</label>
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4 col-md-6">
                <input asp-for="User.UserName" class="form-control" placeholder="" />
                <label asp-for="User.UserName" class="ms-2 text-muted">Никнейм</label>
                <span asp-validation-for="User.UserName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4 col-md-6">
                <input asp-for="User.Name" class="form-control" placeholder="" />
                <label asp-for="User.Name" class="ms-2 text-muted">Имя</label>
                <span asp-validation-for="User.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4 col-md-6">
                <input asp-for="User.BirthDay" class="form-control" placeholder="" />
                <label asp-for="User.BirthDay" class="ms-2 text-muted">День Рождения</label>
                <span asp-validation-for="User.BirthDay" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4 col-md-6">
                <input type="password" asp-for="Password" class="form-control" placeholder="" />
                <label asp-for="Password" class="ms-2 text-muted">Пароль</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4 col-md-6">
                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="" />
                <label asp-for="ConfirmPassword" class="ms-2 text-muted">Проверка Пароля</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="col-md-4"></div>
            <div class="col-md">
                <button type="submit" class="w-100 btn btn-lg btn-dark">Зарегистрироваться</button>
            </div>
            <div class="col-md-4">
                <a class="w-100" asp-action="Login">Уже есть аккаунт?</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
        // <script src="~/Scripts/jquery-1.10.2.js"></script>
        // <script src="~/Scripts/jquery.validate.js"></script>
        // <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    }
}
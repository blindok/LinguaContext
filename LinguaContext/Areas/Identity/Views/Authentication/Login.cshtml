@model LoginVM

@{
    ViewData["Title"] = "Вход в аккаунт";
}

<div class="card mt-3" style="width: 50%; left: 25%">
    <div class="card-header">
        <div class="row py-2">
            <p class="h3">Введите Ваши Данные</p>
        </div>
    </div>
    <div class="card-body p-3">
        <form asp-controller="Authentication" asp-action="Login" method="post" class="row pt-3" enctype="multipart/form-data">
            <div class="form-floating mb-3 col-md-12">
                <input asp-for="Email" class="form-control" aria-required="true" placeholder="example@mail.com"/>
                <label asp-for="Email" class="ms-2 text-muted">Почта</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            <div class="form-floating mb-3 mt-3 col-md-12">
                <input asp-for="Password" class="form-control" aria-required="true" placeholder="example@mail.com" />
                <label asp-for="Password" class="ms-2 text-muted">Пароль</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-12">
                <button type="submit" class="w-100 btn btn-lg btn-dark">Войти</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
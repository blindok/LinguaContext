@{
    ViewData["Title"] = "Тренировки";
}

<div class="text-center my-5">
    <h1 class="display-4">Доступные тренировки</h1>
    <div class="row mt-3">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="my-3">
                <a asp-controller="Task" asp-action="StandardTraining" asp-route-id="@User.FindFirst("userid")!.Value" class="btn btn-primary btn-lg form-control">Стандартная тренировка</a>
            </div>
            <div class="my-3">
                <a asp-controller="Task" asp-action="" asp-route-id="@User.FindFirst("userid")!.Value" class="btn btn-primary btn-lg form-control">Кастомная тренировка</a>
            </div>
            <div class="my-3">
                <a asp-controller="Task" asp-action="" asp-route-id="@User.FindFirst("userid")!.Value" class="btn btn-primary btn-lg form-control">Смешанная тренировка</a>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
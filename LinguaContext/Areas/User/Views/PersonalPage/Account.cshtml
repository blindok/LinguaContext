@model User

@{
    ViewData["Title"] = "Мой аккаунт";
}

<div class="row pt-5">
    <div class="col-md-3">
    </div>
    <div class="col-md-5">
        <div class="card p-5"">
            <div class="row">
                <div class="col-6">
                    <p class="h2">@Model.Name</p>
                    <p class="h5 text-secondary">@Model.UserName</p>
                </div>
                <div class="col-6">
                    <img src="@Model.AvatarUrl" class="card-img-top rounded" height="100%" />
                </div>
            </div>
            <hr />
        </div>
    </div>
    <div class="col-md-4">
    </div>
</div>
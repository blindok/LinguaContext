@model User


<div class="row pt-5">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="Id" hidden>
            <input asp-for="UserName" hidden>
            <input asp-for="Email" hidden>
            <input asp-for="BirthDay" hidden>
            <input asp-for="Name" hidden>
            <input asp-for="PasswordHash" hidden>
            <input asp-for="Role" hidden>
            <input asp-for="AvatarUrl" hidden>
            <div class="form-floating mb-3" style="font-size: 1.2em">
                <input asp-for="AvatarUrl" type="file" name="file" class="form-control">
                <label asp-for="AvatarUrl" class="m-0 pt-2 px-2"></label>
            </div>
            <button type="submit" class="btn border border-dark btn-outline-secondary form-control">Сохранить изменения</button>
        </form>
    </div>
    <div class="col-md-3">
        <partial name="_SettingsSideBarPartial" />
    </div>
</div>

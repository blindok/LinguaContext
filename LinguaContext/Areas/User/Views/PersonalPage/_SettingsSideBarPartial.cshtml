            <li class="nav-item">
                <a id="PersonalSettings" asp-controller="PersonalPage" asp-action="EditPersonalSettings" asp-route-id="@User.FindFirst("userid")!.Value" class="nav-link @(ViewData["action"]!.ToString()=="PersonalSettings" ? "active" : "link-dark")">
                    <svg class="bi" width="16" height="16"><use xlink:href="#table"></use></svg>
                    Тренировки
                </a>
            </li>
            <li class="nav-item">
                <a id="PersonalFactors" asp-controller="PersonalPage" asp-action="EditPersonalFactors" asp-route-id="@User.FindFirst("userid")!.Value" class="nav-link @(ViewData["action"]!.ToString()=="PersonalFactors" ? "active" : "link-dark")">
                    <svg class="bi" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>

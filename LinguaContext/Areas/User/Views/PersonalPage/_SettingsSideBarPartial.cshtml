<div class="col-md-4">
    <div class="d-flex flex-column flex-shrink-0 p-3 bg-light mt-2" style="width: 80%;">
        <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
            <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
            <span class="fs-4">Настройки</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a id="PersonalInfo" asp-controller="PersonalPage" asp-action="UpdatePersonalInfo" asp-route-id="@User.FindFirst("userid")!.Value" class="nav-link @(ViewData["action"]!.ToString()=="PersonalInfo" ? "active" : "link-dark")" aria-current="page">
                    <svg class="bi" width="16" height="16"><use xlink:href="#home"></use></svg>
